<% include ./partials/header %>

<div class="row">
	<div class="col s12 m9 user-seeds">
		<div class="row">
			<div class="col s12">
				<div class="row">
					<% seeds.forEach(function(seed) { %>
						<div class="col s12 m5">
							<div class="card hoverable">
								<div class="card-image">
									<img src="<%= seed.image %>" height="181.4">
									<span class="card-title"><%= seed.title %></span>
								</div>
								<div class="card-content">
									<p>
										<%= seed.excerpt.substring(0, 50) + "..." %>
									</p>
									<div class="divider"></div>
									<div class="valign-wrapper">
										<div class="user-avatar">
											<img src="<%= seed.author.avatar %>" alt="" class="circle responsive-img">
										</div>
										<div class="seed-meta">
											<span class="black-text">
												<%= seed.author.username %>
											</span>
											<br>
											<span class="grey-text">
												<%= seed.created.toDateString() %>
											</span>
										</div>
									</div>
								</div>
								<div class="card-action">

									<span class="valign-wrapper">
										<i class="material-icons">remove_red_eye</i>
										&nbsp;
										<span class="formatcount">
											<%= seed.views %>
										</span>
									</span>
									<span class="valign-wrapper">
										<i class="material-icons">comment</i>
										&nbsp;
										<span class="formatcount">
											<%= seed.commentCount %>
										</span>
									</span>
									<span class="valign-wrapper">
										<i class="material-icons">thumb_up</i>
										&nbsp;
										<span class="formatcount upvotes">
											<%= seed.upvoteCount %>
										</span>
									</span>
									<span class="valign-wrapper">
										<i class="material-icons">thumb_down</i>
										&nbsp;
										<span class="formatcount downvotes">
											<%= seed.downvoteCount %>
										</span>
									</span>
								</div>
								<a class="link" href="/seeds/<%= seed._id %>">Read more</a>
								<span class="earnings"><img width="20" src="/asset/img/coins.svg"> <%= seed.earnings %> <small>GSD</small></span>
							</div>
						</div>
						<% }); %>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ./partials/footer %>
<% include ./partials/footerUserseed%>