<% include ../partials/header %>

<div class="section">
	<div class="container">
		<div class="row">
			<div class="col s12">
				<div class="row">
					<% seeds.forEach(function(seed) { %>
						<div class="col s12 m3">
							<div class="card hoverable">
								<div class="card-image">
									<img src="<%= seed.image %>">
									<span class="card-title">Card Title</span>
								</div>
								<div class="card-content">
									<p>
										<%= seed.body.substring(0, 50) + "..." %>
									</p>
									<div class="divider"></div>
									<div class="valign-wrapper">
		            					<div class="avatar">
		                					<img src="<%= seed.author.avatar %>" alt="" class="circle responsive-img">
		            					</div>
						            	<div class="seed-meta">
							            	<span class="black-text">
							                	<%= seed.author.username %>
							            	</span><br>
							            	<span class="grey-text">
							            		<%= seed.created.toDateString() %>
							            	</span>
						            	</div>
						          	</div>							
								</div>
								<div class="card-action">

									<span class="valign-wrapper">
										<i class="material-icons">remove_red_eye</i>
										&nbsp;<span class="formatcount"><%= seed.views %></span>
									</span>
									<span class="valign-wrapper">
										<i class="material-icons">comment</i>
										&nbsp;<span class="formatcount"><%= seed.commentCount %></span>
									</span>
									<span class="valign-wrapper">
										<i class="material-icons">thumb_up</i>
										&nbsp;<span class="formatcount"><%= seed.upvoteCount %></span>
									</span>
									<span class="valign-wrapper">
										<i class="material-icons">thumb_down</i>
										&nbsp;<span class="formatcount"><%= seed.downvoteCount %></span>
									</span>
								</div>
							</div>
						</div>
					<% }); %>	
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>
