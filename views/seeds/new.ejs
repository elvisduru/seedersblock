<% include ../partials/header %>

<div class="container">
	<div class="row">
		<form class="col s12">
			<div class="row">
				<div class="input-field col s12">
					<i class="material-icons prefix">mode_edit</i>
					<input type="text" id="post-title" name="seed[title]">
					<label for="post-title">Post Title</label>
				</div>
			</div>
			<div class="row">
				<div class="file-field input-field col s12">
					<div class="btn">
						<i class="material-icons">image</i>
						<input type="file" name="seed[featuredImg]">
					</div>
					<div class="file-path-wrapper">
						<input type="text" class="file-path validate" placeholder="Upload Feature Image">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col s12 input-field">
					<textarea id="post-body" class="materialize-textarea"></textarea>
				</div>
			</div>
		</form>
	</div>
</div>

<div class="container">
	<div data-editable data-name="main-content">
	    <blockquote>
	        Always code as if the guy who ends up maintaining your code will be a violent psychopath who knows where you live.
	    </blockquote>
	    <p>John F. Woods</p>
	</div>
</div>

