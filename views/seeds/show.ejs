<% include ../partials/header %>

<div class="container">
	<div class="section content-display">
		<div class="row">
			<div class="col s12">
				<div class="row author-meta valign-wrapper">
					<div class="avatar">
						<img src="<%= seed.author.avatar %>" alt="" class="circle responsive-img">
					</div>
					<div>
						<span class="black-text">
							<%= seed.author.username %>
						</span>
						<br>
						<span class="grey-text">
							<%= seed.created.toDateString() %>
						</span>
					</div>
				</div>
				<div class="row content-box">
					<%- seed.body %>
				</div>
				<div class="row valign-wrapper">
					<div>
						<a class="waves-effect waves-light btn" href="/seeds/<%= seed._id %>/edit"><i class="material-icons left">edit</i>Edit Seed</a>
					</div>
					<form class="delete-seed-btn" action="/seeds/<%= seed._id %>/delete?_method=DELETE" method="POST">
						<button class="waves-effect waves-light btn red" href=""><i class="material-icons left">delete</i>Delete Seed</button>
					</form>	
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>