<% include ../partials/header %>

<div class="row">
	<div class="col s12 m9">
		<div class="row">
			<!-- header -->
			<div class="col s12 friends">
				<div class="top-header">
					<div class="title">
						<h5><i class="material-icons">group</i>Followers</h5>
					</div>
					<div class="find-friends">
						<!-- find friends button goes here -->
					</div>
				</div>
			</div>
			<!-- friends container -->
			<div class="col s12 friends">
				<% users.forEach(function (user) { %>
				<div class="col s5">
					<div class="card horizontal">
				      	<div class="card-image">
				        	<img src="<%= user.avatar %>">
				      	</div>
				      	<div class="card-stacked">
					        <div class="card-content">
					          	<p><strong><%= user.firstname %> <%= user.lastname %></strong></p>
					          	<input type="hidden" name="username" readonly value="<%= user.username %>">
					        </div>
					        <div class="card-action">
					          	<a class="btn-over link btn btn-small waves-effect waves-light right" href="/<%= user.username %>">View User<i class="material-icons right">red_eye</i></a>
					        </div>
				      	</div>
				      	<a class="link" href="/<%= user.username %>">View User</a>
				    </div>
				</div>
				<% }); %>
			</div>
		</div>
	</div>
	<div class="col s12 m4">
		<!-- fetured posts go here -->
	</div>
</div>

<% include ../partials/footer %>
</body>
</html> 